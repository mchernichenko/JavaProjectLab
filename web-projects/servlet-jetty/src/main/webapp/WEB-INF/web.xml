<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <!--описание сервлета-->
  <!-- first-servlet это просто синоним, используемый внутри контекста web-сервера -->
  <servlet>
    <servlet-name>first-servlet</servlet-name>
    <servlet-class>exercise.MainServlet</servlet-class>
  </servlet>
  <!--маппинг сервлета-->
 <!-- /my-servlet  - URL по которому будем обращаться к сервлету-->
  <servlet-mapping>
    <servlet-name>first-servlet</servlet-name>
    <url-pattern>/my-servlet</url-pattern>
  </servlet-mapping>
</web-app>
